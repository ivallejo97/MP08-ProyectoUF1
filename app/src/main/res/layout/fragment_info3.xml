<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info3">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/fotoInfo3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/stats"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/textoInfo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Analiza las estadísticas y progesión de los mejores jugadores"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/fotoInfo3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/botonContinuar3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="45dp"
        android:hint="Continuar"
        android:textSize="25dp"
        android:textColorHint="@color/black"
        android:backgroundTint="#CBFF9E"
        app:cornerRadius="15dp"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/textoInfo3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/botonSaltar3"/>

    <Button
        android:id="@+id/botonSaltar3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="20dp"
        android:hint="Saltar"
        android:textSize="25dp"
        android:textColorHint="@color/black"
        android:backgroundTint="#CBFF9E"
        app:cornerRadius="15dp"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/botonContinuar3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>