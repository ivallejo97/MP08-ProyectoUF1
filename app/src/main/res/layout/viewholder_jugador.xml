<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:backgroundTint="#FBFCF9"
    android:background="@drawable/styles_edittext"
    android:layout_width="match_parent"
    android:elevation="10dp"
    android:layout_height="85dp">

    <ImageView
        android:id="@+id/fotoJugador"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:elevation="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/nombreJugador"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/fotoJugador"
        app:layout_constraintLeft_toRightOf="@id/fotoJugador"
        app:layout_constraintBottom_toBottomOf="@id/fotoJugador"/>


    <TextView
        android:id="@+id/precioJugador"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:elevation="10dp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/nombreJugador"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/nombreJugador"/>





</androidx.constraintlayout.widget.ConstraintLayout>