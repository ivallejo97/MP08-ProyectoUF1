<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MostrarNoticias">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/tituloNoticia1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/fotoNoticia1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/tituloNoticia1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/contenidoNoticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:padding="10dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/fotoNoticia1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/temasRelacionados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Temas relacionados"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/contenidoNoticia"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoJugadorNoticia"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            app:civ_border_color="@color/black"
            app:civ_border_width="1dp"
            app:layout_constraintTop_toBottomOf="@id/temasRelacionados"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/nombreJugadorNoticia"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/black"

            app:layout_constraintTop_toTopOf="@id/fotoJugadorNoticia"
            app:layout_constraintLeft_toRightOf="@id/fotoJugadorNoticia"
            app:layout_constraintBottom_toBottomOf="@id/fotoJugadorNoticia"/>

        <ImageView
            android:id="@+id/fotoClubNoticia"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/fotoJugadorNoticia"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/nombreClubNoticia"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/fotoClubNoticia"
            app:layout_constraintLeft_toRightOf="@id/fotoClubNoticia"
            app:layout_constraintBottom_toBottomOf="@id/fotoClubNoticia"/>

        <ImageView
            android:id="@+id/fotoWebNoticia1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/fotoClubNoticia"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/webNoticia1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/fotoWebNoticia1"
            app:layout_constraintLeft_toRightOf="@id/fotoWebNoticia1"
            app:layout_constraintBottom_toBottomOf="@id/fotoWebNoticia1"/>





    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
